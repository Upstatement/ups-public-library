<section class="topics">
  <h1 class="topics__overline">Learn about</h1>
  <ul class="topics__list">
  {% for topic in collections.tagList %}
    <li class="topic__wrapper">
      <a href="{{ "/topics/" ~ topic }}" class="topics__item">
        <span class="topics__item__count">0{{ collections[topic] | where("data.tags[0]", "entries") | length }}</span>
        <h2 class="topics__item__title">{{ topic | formatTopic }}</h2>
      </a>
    </li>
  {% endfor %}
  </ul>
</section>
