---
layout: layouts/base/index.njk
templateClass: series
---

{% if content %}
  <section class="series__content md">
    <a class="breadcrumb" href="/">~ups-public-library</a>
    <h5 class="series__label">Series</h5>
    <h1 class="series__title">{{ title }}</h1>
    {{ content | safe }}

    <ul class="series__list">
      {% for entry in entries %}
        <li>
          <a href="{{ '/entries/' ~ (entry | slug) }}" class="series__entry">
            {{ entry }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </section>
{% endif %}
