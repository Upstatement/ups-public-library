<section class="home__carousel">
  <h4 class="carousel__overline">&#8644; Featured Content &#8644;</h4>
  <ul class="carousel__list">
  {% for item in collections.featured %}
    {# The tag assigned by the json file in the directory will always be the first tag #}
    {% set tagDef = item.data.tags[0] %}
    <li>
      <a class="carousel__card" href="{{ item.url }}">
        <span class="carousel__card-overline">
          <span class="carousel__card-type">
            {% if tagDef == "entries" %}
              Entry
            {% endif %}
            {% if tagDef == "series" %}
              Series
            {% endif %}
            <span class="carousel__card-arrow">&nbsp;&#8599;</span></span>
          <span class="carousel__card-topic">{{ item.data.tags[1] }}</span>
        </span>
      <h4 class="carousel__card-title">{{ wrapWords(item.data.title) }}</h4>
        <p class="carousel__card-description">
          {% if item.data.description %}
            {{ item.data.description }}
          {% else %}
            HEY!!! This item needs a description in the frontmatter. Pretty please :)
          {% endif %}
        </p>
      </a>
    </li>
  {% endfor %}
