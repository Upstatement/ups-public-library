---
layout: layouts/base/index.njk
permalink: /index/
title: Index
---

{% macro entryLink(title, level) %}
  <a href="{{ '/entries/' ~ (title | slug) }}" class="index__link">
    {% if level == 1 %}
      <h1 class="index__title">
        {{ title }}
        <svg class="index__icon index__icon--arrow">
          <use xlink:href="#arrow"></use>
        </svg>
      </h1>
    {% else %}
      <h2 class="index__title">
        {{ title }}
        <svg class="index__icon index__icon--arrow">
          <use xlink:href="#arrow"></use>
        </svg>
      </h2>
    {% endif %}
  </a>
{% endmacro %}

<dl class="index" role="list">
  {% for entry in collections.entry %}
    <dt class="index__type">Entry</dt>
    <dd class="as-h1 index__desc">
      {{ entryLink(entry.data.title, 1) }}
    </dd>
  {% endfor %}

  {% for collection in collections.collection %}
    {% if collection.data.entries.length > 0 %}
      {% set inputName = 'expand-' ~ (collection.data.title | slug) %}
      <dt class="index__type">Collection</dt>
      <dd class="as-h1 index__desc">
        <input class="index__expand-input" type="checkbox" name="{{ inputName }}" id="{{ inputName }}">
        <label class="index__expand-label" for="{{ inputName }}">
          <h1 class="index__title">
            {{ collection.data.title }}
            <svg class="index__icon index__icon--plus">
              <use xlink:href="#plus"></use>
            </svg>
            <svg class="index__icon index__icon--minus">
              <use xlink:href="#minus"></use>
            </svg>
          </h1>
        </label>
        <ol class="index__nest">
          {% for entry in collection.data.entries %}
            <li class="index__nest__item">
              {{ entryLink(entry, 2) }}
            </li>
          {% endfor %}
        </ol>
      </dd>
    {% endif %}
  {% endfor %}

  {% for series in collections.series %}
    {% if series.data.entries.length > 0 %}
      {% set inputName = 'expand-' ~ (series.data.title | slug) %}
      <dt class="index__type">Series</dt>
      <dd class="as-h1 index__desc">
        <input class="index__expand-input" type="checkbox" name="{{ inputName }}" id="{{ inputName }}">
        <label class="index__expand-label" for="{{ inputName }}">
          <h1 class="index__title">
            {{ series.data.title }}
            <svg class="index__icon index__icon--plus">
              <use xlink:href="#plus"></use>
            </svg>
            <svg class="index__icon index__icon--minus">
              <use xlink:href="#minus"></use>
            </svg>
          </h1>
        </label>
        <ol class="index__nest">
          {% for entry in series.data.entries %}
            <li class="index__nest__item">
              {{ entryLink(entry, 2) }}
            </li>
          {% endfor %}
        </ol>
      </dd>
    {% endif %}
  {% endfor %}
</dl>
